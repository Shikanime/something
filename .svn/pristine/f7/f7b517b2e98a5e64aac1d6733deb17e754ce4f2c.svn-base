#include <assert.h>
#include <stdio.h>
#include "./movement.h"
#include "./character.h"

void should_move_backward();
void should_move_forward();
void should_move_right();
void should_move_left();

void					describe_movement(uint32_t argc, uint8_t const *argv[])
{
	(void) argc;
	(void) argv;

	should_move_backward();
	should_move_forward();
	should_move_left();
	should_move_right();
}

void should_move_backward() {
	character_t	*c = NULL;

	c = make_character((uint8_t *) "uuid", 0, 0, E_PLAYER);
	character_move(c, E_BACKWARD);
	assert(c->coord[0] == -1 && c->coord[1] == 0);
}

void should_move_forward() {
	character_t	*c = NULL;

	c = make_character((uint8_t *) "uuid", 0, 0, E_PLAYER);
	character_move(c, E_FORWARD);
	assert(c->coord[0] == 1 && c->coord[1] == 0);
}

void should_move_right() {
	character_t	*c = NULL;

	c = make_character((uint8_t *) "uuid", 0, 0, E_PLAYER);
	character_move(c, E_RIGHT);
	assert(c->coord[0] == 0 && c->coord[1] == 1);
}

void should_move_left() {
	character_t	*c = NULL;

	c = make_character((uint8_t *) "uuid", 0, 0, E_PLAYER);
	character_move(c, E_LEFT);
	assert(c->coord[0] == 0 && c->coord[1] == -1);
}
